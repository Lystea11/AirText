{
  "name": "airtext",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:signal\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:signal": "cd apps/signal && npm run dev",
    "build": "npm run build:web && npm run build:signal",
    "build:web": "cd apps/web && npm run build",
    "build:signal": "cd apps/signal && npm run build",
    "start": "concurrently \"npm run start:web\" \"npm run start:signal\"",
    "start:web": "cd apps/web && npm run start",
    "start:signal": "cd apps/signal && npm run start",
    "lint": "npm run lint:web && npm run lint:signal",
    "lint:web": "cd apps/web && npm run lint",
    "lint:signal": "cd apps/signal && npm run lint",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5"
  }
}
